<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="10dp"
              android:layout_marginTop="15dp"
>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#F5F1F1"
            app:cardElevation="70dp"
            app:cardCornerRadius="15dp"
           android:padding="20dp"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
       <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/image_food_for_member"
               android:layout_width="100dp"
               app:civ_border_color="#2d2d2d"
               app:civ_border_width="1dp"
               android:layout_gravity="center"
               android:layout_height="130dp"
               android:src="@drawable/panel_profile"
       />
        <TextView
                android:layout_width="wrap_content"
                android:textSize="15dp"
               android:textStyle="italic"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="Name"
                android:id="@+id/text_name_for_member"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/text_year_for_member"
                android:textSize="10dp"
                android:layout_gravity="center"
                android:textStyle="italic"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year" />
            <TextView
                    android:id="@+id/text_roll_for_member"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:textStyle="italic"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll NO" />
            <TextView
                    android:id="@+id/text_phone_for_member"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:textStyle="italic"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone" />
            <TextView
                    android:id="@+id/text_email_for_member"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:textStyle="italic"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>