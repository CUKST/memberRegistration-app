<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@drawable/panel2"
              android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="140dp"
            android:id="@+id/imageViewFood"
            android:layout_marginTop="5dp"
            android:src="@drawable/panel_profile"
            app:civ_border_width="1dp"
            app:civ_border_color="#2d2d2d"
            android:layout_gravity="center"
            android:layout_height="120dp"/>
<LinearLayout android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <EditText
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:id="@+id/edt_update_position"
            android:background="@drawable/edt_shape"
            android:layout_marginTop="10dp"
            android:hint="Position"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_height="35dp"/>
    <EditText
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:id="@+id/edt_update_year"
            android:background="@drawable/edt_shape"
            android:layout_marginTop="10dp"
            android:hint="Year"
            android:drawableLeft="@drawable/ic_format_list"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_height="35dp"/>
    <Button
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:text="Prepare "
            android:layout_marginTop="10dp"
            android:id="@+id/btnUpdate"
            android:background="@drawable/btn_shape"
            android:layout_height="39dp"/>

</LinearLayout>

</LinearLayout>